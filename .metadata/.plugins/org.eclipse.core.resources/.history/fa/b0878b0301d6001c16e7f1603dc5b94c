import java.util.Scanner;
public class Second {
public static void main(String[] args) {
	Scanner sc=new Scanner(System.in);
	System.out.println("enter number lines number");
	int n=sc.nextInt();
	for(int i=0;i<n;i++)
	{
for(int j=0; j<n; j++)
{
	if(i==0||i==n-1||j==0|j==n-1||i==j)
	System.out.print("x ");
	else
		System.out.print("");
	
}
System.out.println();
	}
}
}
