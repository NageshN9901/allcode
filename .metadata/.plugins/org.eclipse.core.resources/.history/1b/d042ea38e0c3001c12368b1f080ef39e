import java.util.*;
public class SquareDetils {

	
	public static void main(String[] args) {
		Scanner sc=new Scanner(System.in);
		float side; //dfining the datatype for input in console window
		//side=23;  by amking scanner and inputmatgod null for constant values
		System.out.println("enter side of square");
		side =sc.nextInt(); // defining input methood data type for same
		System.out.println("arae = "+" "+side*side);
		System.out.println("perimeter ="+" "+4*side);
		
		
		
		
	}
}
