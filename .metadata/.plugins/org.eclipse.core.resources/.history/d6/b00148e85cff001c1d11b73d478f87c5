		Connection con=null;
		PreparedStatement psmt=null;// we are using prepoerd statemnet
		String qry="select * from btm2.st1 where id=?";// iam gpoing pass intgere id palceholder
		
		try {
			Class.forName("com.mysql.jdbc.Driver");
