


	import java.util.Scanner;
	public class MainPerfect {
	public static void main(String[] args) {
		Scanner sc=new Scanner(System.in);
		System.out.println("enter  3 integer value");
		int n=sc.nextInt();// 
		int sum=0;
		
	for (int i=0;i<n;i++)
	{
		
		if (n%i==0);
		
			sum=sum+i;
	}
	if (sum==n)
		System.out.println(n+"perfect numvber");

	else 
		System.out.println(n+"is perfect number"+sum);
}
}