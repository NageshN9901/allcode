import java.util.Scanner;
public class onetwo {
	

		


			public static void main(String[] args) {
				Scanner sc=new Scanner(System.in);
				int n=sc.nextInt();
			
				for (int i=1; i<=n; i++)// it rows
				{
					for(int j=1;j<=i;j++)
					{ 
					System.out.print("* ");
					}
					
				System.out.println("");
				
				
				for(int l=n;l>=1;l--)
				{
					for(int k=1;k<=l;k++)
						System.out.print("* ");
					
				}
				System.out.println("");
				}
			}

	}



