import java.util.Scanner;
public class trangle1 {
	
		


			public static void main(String[] args) {
				Scanner sc=new Scanner(System.in);
				int n=sc.nextInt();
			
					for(int i=1; i<=n; i++)
					{
						
						for (int j=2*(n-1);j>=1;j++)// we need to calute spaces and it should come less --
						{
							System.out.print(" ");
						}
						{
							for(int j=1; j<=i;j++)
							{
								
								System.out.print("* ");
							}
						}
					
			
				System.out.println();
				}
			}

	}



